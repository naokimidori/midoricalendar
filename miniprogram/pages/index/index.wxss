.page-index {
  min-height: 100vh;
  padding-bottom: 30rpx;
  /* background-color: #f2f2f2; */
}

.calendar {
  /* background-color: #f2f2f2; */
}

.top-bg {
  position: relative;
  height: 400rpx;
}

.top-bg .page-title {
    position: absolute;
    left: 50%;
    top: 100rpx;
    font-size: 34rpx;
    transform: translateX(-50%);
    font-weight: bold;
    z-index: 2;
}

.top-bg image {
  position: absolute;
  width: 100vw;
  height: 1200rpx;
  top: -110rpx;
  left: 0;
  z-index: 1;
}

/* 顶部 */
.calendar .calendar-header {
  position: absolute;
  top: 0rpx; 
  left: 0rpx;
  width: 100vw;
  display: flex;
  align-items: flex-end;
  z-index: 2;
  padding: 200rpx 10rpx 100rpx;
  /* background-image: linear-gradient(180deg, #93c7b1 10%, #cff3e5);
  background-repeat: no-repeat;
  background-position: 100%; */
}
/* .calendar .calendar-empty {
  height: 60rpx;
  background-image: linear-gradient(180deg, #cff3e5, #fff);
} */

.calendar .calendar-header .header-day {
  padding: 0 30rpx;
  font-family: DinPro;
  /* font-weight: bold; */
  font-size: 120rpx;
  line-height: 100rpx;
}

.calendar .calendar-header .header-info {
  /* display: flex; */
  /* flex-direction: column; */
  /* justify-content: flex-start; */
}

.calendar .calendar-header .header-detail {
  box-sizing: border-box;
  flex: 1;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.calendar .calendar-header .header-detail .detail-name {
  box-sizing: border-box;
  padding-top: 10rpx;
  min-width: 250rpx;
  text-align: left;
  font-size: 28rpx;
}

.calendar .calendar-header .header-detail .detail-name .name-text {
  font-weight: bold;
  font-size: 34rpx;
}

.calendar .calendar-header .header-detail .detail-times {
  box-sizing: border-box;
  padding-top: 10rpx;
  min-width: 250rpx;
  text-align: left;
  font-size: 26rpx;
}

.calendar .calendar-header .header-info .city {
  box-sizing: border-box;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  border: 2rpx solid #596770;
  color: #596770;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  border-radius: 6rpx;
  padding: 2rpx 6rpx;
}

.calendar .calendar-header .header-info .month {
  margin-top: 6rpx;
  font-size: 28rpx;
  font-family: DinPro;
}

.calendar .swiper-box {
  margin-top: 15rpx;
  height: 800rpx;
  position: relative;
  z-index: 4;
}

/* 星期 */
.calendar .calendar-week {
  padding: 20rpx 24rpx;
  display: flex;
  /* justify-content: space-around; */
}

.calendar .calendar-week .week-item {
  width: 14.28571428571429%;
  text-align: center;
  font-size: 26rpx;
  font-weight: bold;
}

/* 日历表 */
.calendar .calendar-day {
  box-sizing: border-box;
  padding: 24rpx 24rpx 20rpx;
  display: flex;
  flex-wrap: wrap;
}

.calendar .calendar-day .day-item {
  box-sizing: border-box;
  width: 14.28571428571429%;
  height: 100rpx;
  padding: 0 8rpx 8rpx;
  text-align: center;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.calendar .calendar-day .day-item .active-point {
  position: absolute;
  left: 80%;
  top: 10rpx;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #8799a3;
}

.calendar .calendar-day .day-item .day-txt {
  font-size: 32rpx;
  font-family: DinPro;
}
.calendar .calendar-day .day-item .work-type {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 40rpx;
  margin-top: 4rpx;
  font-size: 22rpx;
  color: #fff;
  border: 1rpx solid #ccc;
  background-color: rgb(91, 181, 241);
  border-radius: 6rpx;
}

.calendar .calendar-day .gray {
  color: gray;
}

.calendar .calendar-day .today {
  background-color:#faebd0;
}

.page-index .today-btn {
  background-color: #fff;
  position: fixed;
  right: 10rpx;
  top: 75%;
  width: 90rpx;
  height: 90rpx;
  box-shadow: 0rpx 0rpx 14rpx #ddd;
  border-radius: 50%;
  text-align: center;
  line-height: 90rpx;
  font-size: 34rpx;
  font-weight: bold;
}


.page-index .birthday-banner {
  width: 100%;
  height: 375rpx;
}

.page-index .birthday-banner .birth-img {
  width: 100%;
  height: 100%;
}

.page-index .note-wrapper {
  box-sizing: border-box;
  width: 95vw;
  min-height: 200rpx;
  margin: 0 auto;
  padding: 24rpx;
  position: sticky;
  bottom: -130rpx;
  box-shadow: 0 0 14rpx rgba(0, 0, 0, 0.1);
  z-index: 6;
}

.page-index .note-wrapper .title {
  font-weight: bold;
  font-size: 36rpx;
}

.page-index .note-wrapper .content {
  padding: 12rpx 20rpx;
  /* text-align: center; */
  font-size: 30rpx;
  line-height: 48rpx;
}
