.page-my {
  box-sizing: border-box;
  min-height: 100vh;
}

.page-my .header {
  display: flex;
  padding: 10rpx 32rpx;
  border-bottom: 20rpx solid #f2f2f2;
}
.page-my .no-login .empty-avatar {
  width: 120rpx;
  height: 120rpx;
  background-color: #bebebe;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
}

.page-my .no-login .empty-avatar .avatar {
  width: 80rpx;
  height: 80rpx;
}

.page-my .no-login .notice {
  padding: 10rpx 0;
}

.page-my .no-login .notice .notice-title {
  font-size: 40rpx;
  font-weight: bold;
}

.page-my .no-login .notice .notice-desc {
  font-size: 24rpx;
  color: #a5a5a5;
  padding-top: 15rpx;
}

.page-my .my-userInfo .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.page-my .my-userInfo .nickname {
  display: flex;
  align-items: center;
  font-size: 38rpx;
}
