	content: 'âœ“';
	color: #fff;
	font-size: 60rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
}

.page-sheet-form .btn-wrapper {
  margin-top: 200rpx;
  display: flex;
}

.page-sheet-form .btn-wrapper .btn-del {
  width: 300rpx;
  background-color: #F7F7F7;
}

.page-sheet-form .btn-wrapper .btn-save {
  width: 300rpx;
}
